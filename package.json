{
  "name": "lords-gym-auburn",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "preview:cloudflare": "VITE_BASE_PATH=/ npm run build && npx vite preview --base /",
    "deploy:cloudflare": "VITE_BASE_PATH=/ npm run build && npx wrangler pages deploy dist --project-name=lords-gym",
    "setup:supabase": "node scripts/setup-supabase.js",
    "setup:supabase:ps1": "powershell -ExecutionPolicy Bypass -File scripts/setup-supabase.ps1",
    "setup:cloudflare": "node scripts/setup-github-cloudflare.js",
    "dns:add": "node scripts/cloudflare-dns.js",
    "setup:contact-form": "node scripts/setup-contact-form-api.js",
    "create-admin": "node scripts/create-admin-user.js",
    "set-admin-password": "node --env-file=.env.local scripts/set-admin-password.js",
    "push:github": "node --env-file=.env.local scripts/push-via-github-api.js",
    "type-check": "tsc --noEmit",
    "lint": "echo 'No linter configured'",
    "test": "vitest run",
    "test:store": "vitest run lib/store-products.test.ts lib/cart-operations.test.ts",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:local": "node --env-file=.env.local scripts/run-e2e-with-env.mjs",
    "test:e2e:ui": "playwright test --ui",
    "test:admin": "node --env-file=.env.local scripts/test-admin-password.js",
    "diagnose:admin": "node scripts/diagnose-admin-login.js",
    "test:calendar-rpc": "node --env-file=.env.local scripts/test-calendar-rpc.mjs",
    "db:push": "node --env-file=.env.local scripts/supabase-db-push.mjs",
    "db:apply-image-coming-soon": "node --env-file=.env.local scripts/apply-image-coming-soon-migration.mjs",
    "set:cloudflare-secrets": "node --env-file=.env.local scripts/set-github-cloudflare-secrets-via-api.js",
    "set:supabase-secrets": "node --env-file=.env.local scripts/set-github-supabase-secrets.js",
    "show:supabase-secrets": "node --env-file=.env.local scripts/show-supabase-secrets-for-github.js",
    "fix:supabase-auth-urls": "node --env-file=.env.local scripts/fix-supabase-auth-urls.mjs",
    "fix:cloudflare-deploy": "node --env-file=.env.local scripts/fix-cloudflare-deploy-command.mjs",
    "trigger-cloudflare-deploy": "node --env-file=.env.local scripts/trigger-cloudflare-deploy.js",
    "regression": "node scripts/run-regression.mjs --continue-on-error",
"verify-push": "node scripts/verify-push.mjs",
    "verify-push:full": "node --env-file=.env.local scripts/verify-push.mjs",
    "test:db-audit": "node --env-file=.env.local scripts/db-audit.mjs",
    "diagnose:supabase": "node --env-file=.env.local scripts/supabase-diagnose.mjs",
    "inspect:supabase": "node --env-file=.env.local scripts/supabase-inspect-report.mjs",
    "db:apply-pending": "node --env-file=.env.local scripts/apply-pending-schema.mjs",
    "backup:schema": "node scripts/export-schema-backup.mjs",
    "backup:create-project": "node --env-file=.env.local scripts/create-backup-project.mjs"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.90.1",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "libsodium-wrappers": "^0.7.13",
    "md-to-pdf": "^5.2.5",
    "pdf-lib": "^1.17.1",
    "pg": "^8.18.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.5.3",
    "vite": "^5.3.4",
    "vitest": "^4.0.18"
  }
}
