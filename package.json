{
  "name": "lords-gym-auburn",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "preview:cloudflare": "VITE_BASE_PATH=/ npm run build && npx vite preview --base /",
    "deploy:cloudflare": "VITE_BASE_PATH=/ npm run build && npx wrangler pages deploy dist --project-name=lords-gym",
    "setup:supabase": "node scripts/setup-supabase.js",
    "setup:google-auth": "node --env-file=.env.local scripts/configure-google-oauth.js",
    "check:google-auth": "node --env-file=.env.local scripts/configure-google-oauth.js --check",
    "setup:supabase:ps1": "powershell -ExecutionPolicy Bypass -File scripts/setup-supabase.ps1",
    "setup:cloudflare": "node scripts/setup-github-cloudflare.js",
    "dns:add": "node scripts/cloudflare-dns.js",
    "setup:contact-form": "node scripts/setup-contact-form-api.js",
    "create-admin": "node scripts/create-admin-user.js",
    "push:github": "node --env-file=.env.local scripts/push-via-github-api.js",
    "type-check": "tsc --noEmit",
    "lint": "echo 'No linter configured'",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:admin": "node --env-file=.env.local scripts/test-admin-password.js",
    "diagnose:admin": "node scripts/diagnose-admin-login.js",
    "test:calendar-rpc": "node --env-file=.env.local scripts/test-calendar-rpc.mjs",
    "db:push": "node --env-file=.env.local scripts/supabase-db-push.mjs",
    "set:cloudflare-secrets": "node --env-file=.env.local scripts/set-github-cloudflare-secrets-via-api.js",
    "trigger-cloudflare-deploy": "node --env-file=.env.local scripts/trigger-cloudflare-deploy.js"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.90.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "libsodium-wrappers": "^0.7.13",
    "md-to-pdf": "^5.2.5",
    "pdf-lib": "^1.17.1",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.5.3",
    "vite": "^5.3.4",
    "vitest": "^4.0.18"
  }
}
